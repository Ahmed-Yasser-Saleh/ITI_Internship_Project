
<!DOCTYPE html>
@model List<Trainee_Course>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                @foreach(var i in Model){          
                <h5 class="card-title">Trainee: @i.Trainee.Name</h5>
                <p class="card-text"><strong>Trainee ID:</strong> @i.Trainee.Id</p>

                <h4>Enrolled Course</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Degree</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                                <td>@i.course.Name</td>
                                <td>@i.degree</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="TraineeCourses" asp-route-id="@i.TraineeId"class="btn btn-warning btn-sm">Edit</a>
                                    <form asp-action="Delete" asp-controller="TraineeCourses" asp-route-id="@i.TraineeId" method="post" onsubmit="return confirmDelete();" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        
                    </tbody>
                </table>
                }
            </div>
        </div>
    </div>
</body>
<form action="TraineeCourses/New">
    <button type="submit" class="btn btn-primary">New</button>
</form>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this traineecourse?");
    }
</script>
</html>

