@model Trainee;
<div class="container mt-5">
    <div class="card" style="width: 40rem;">
        <img class="logo" src="~/img/pic.jpg" alt="Card image cap" style="width: 200px; height: 200px;">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>ID:</strong> @Model.Id</p>
            <p class="card-text"><strong>address:</strong> @Model.address</p>
            <p class="card-text"><strong>age:</strong> @Model.age</p>
            <p class="card-text"><strong>Department:</strong> @(Model.Department?.Name ?? "NULL")</p>
            <p class="card-text"><strong>grade:</strong> @Model.grade</p>
        </div>
    </div>
</div>
<br />
<br />
<a asp-action="GetAll" asp-controller="Trainee" class="btn btn-primary">Back To list</a>
